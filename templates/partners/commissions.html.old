{% extends "base.html" %}

{% block title %}Commissioni & pagamenti{% endblock %}
{% block page_title %}Commissioni & pagamenti{% endblock %}

{% block content %}

<!-- INTRO + KPI -->
<div class="mb-6">
    <p class="text-sm text-slate-600 mb-4">
        Riepilogo delle commissioni maturate sulle tue vendite e dei pagamenti ricevuti.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white border border-slate-200 rounded-2xl p-4">
            <p class="text-xs font-semibold text-slate-500 uppercase mb-2">
                Commissioni maturate
            </p>
            <p class="text-2xl font-semibold text-slate-900">
                € {{ total_commission_matured }}
            </p>
            <p class="text-xs text-slate-500 mt-1">
                Somma delle commissioni su tutte le righe completate.
            </p>
        </div>

        <div class="bg-white border border-slate-200 rounded-2xl p-4">
            <p class="text-xs font-semibold text-slate-500 uppercase mb-2">
                Pagato
            </p>
            <p class="text-2xl font-semibold text-emerald-700">
                € {{ total_payout_paid }}
            </p>
            <p class="text-xs text-slate-500 mt-1">
                Totale già liquidato.
            </p>
        </div>

        <div class="bg-white border border-slate-200 rounded-2xl p-4">
            <p class="text-xs font-semibold text-slate-500 uppercase mb-2">
                Da liquidare
            </p>
            <p class="text-2xl font-semibold text-amber-700">
                € {{ total_commission_unpaid }}
            </p>
            <p class="text-xs text-slate-500 mt-1">
                Differenza tra maturato e pagato.
            </p>
        </div>
    </div>
</div>

<!-- ELENCO RIGHE COMMISSIONATE -->
<div class="bg-white border border-slate-200 rounded-2xl p-6 mb-8">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">
        Righe commissionate (ordini completati)
    </h2>

    <div class="overflow-x-auto">
        <table class="min-w-full text-sm border border-slate-200 rounded-xl">
            <thead class="bg-slate-50 text-slate-600 text-xs uppercase">
                <tr>
                    <th class="px-3 py-2 text-left">Data ordine</th>
                    <th class="px-3 py-2 text-left">Ordine</th>
                    <th class="px-3 py-2 text-left">Prodotto</th>
                    <th class="px-3 py-2 text-right">Totale riga</th>
                    <th class="px-3 py-2 text-right">% commissione</th>
                    <th class="px-3 py-2 text-right">Commissione</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                {% for item in commission_items %}
                    <tr class="hover:bg-slate-50">
                        <td class="px-3 py-2">
                            {{ item.order.created_at|date:"d/m/Y" }}
                        </td>
                        <td class="px-3 py-2">
                            #{{ item.order.id }}
                        </td>
                        <td class="px-3 py-2">
                            {{ item.product.name }}
                        </td>
                        <td class="px-3 py-2 text-right">
                            € {{ item.total_price }}
                        </td>
                        <td class="px-3 py-2 text-right">
                            {{ item.commission_rate }}%
                        </td>
                        <td class="px-3 py-2 text-right font-semibold text-slate-900">
                            € {{ item.commission_amount }}
                        </td>
                    </tr>
                {% empty %}
                    <tr>
                        <td colspan="6" class="px-3 py-4 text-center text-slate-500">
                            Non ci sono ancora righe completate con commissioni.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<!-- ELENCO PAGAMENTI -->
<div class="bg-white border border-slate-200 rounded-2xl p-6 mb-8">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">
        Storico pagamenti
    </h2>

    <div class="overflow-x-auto">
        <table class="min-w-full text-sm border border-slate-200 rounded-xl">
            <thead class="bg-slate-50 text-slate-600 text-xs uppercase">
                <tr>
                    <th class="px-3 py-2 text-left">Periodo</th>
                    <th class="px-3 py-2 text-left">Stato</th>
                    <th class="px-3 py-2 text-right">Importo</th>
                    <th class="px-3 py-2 text-left">Note</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                {% for p in payouts %}
                    <tr>
                        <td class="px-3 py-2">
                            {{ p.period_start|date:"d/m/Y" }} → {{ p.period_end|date:"d/m/Y" }}
                        </td>
                        <td class="px-3 py-2">
                            <span class="inline-flex items-center rounded-full px-2.5 py-1 text-xs font-medium
                                {% if p.status == 'draft' %}
                                    bg-slate-100 text-slate-700
                                {% elif p.status == 'confirmed' %}
                                    bg-blue-100 text-blue-700
                                {% elif p.status == 'paid' %}
                                    bg-emerald-100 text-emerald-800
                                {% endif %}
                            ">
                                {{ p.get_status_display }}
                            </span>
                        </td>
                        <td class="px-3 py-2 text-right font-semibold text-slate-900">
                            € {{ p.total_commission }}
                        </td>
                        <td class="px-3 py-2">
                            {{ p.notes|default:"-" }}
                        </td>
                    </tr>
                {% empty %}
                    <tr>
                        <td colspan="4" class="px-3 py-4 text-center text-slate-500">
                            Non sono ancora stati registrati pagamenti.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
